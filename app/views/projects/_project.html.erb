<%= turbo_frame_tag dom_id(project) do %>
  <div id="<%= dom_id project %>" class="card card-body">
    <div class="flex justify-between">
      <p><%= project.content %></p>
      <%= link_to "edit", edit_project_path(project) %>
    </div>
    <div class="flex justify-between items-center mt-5">
      <div id="vote-btn-<%= project.id %>">
        <%= render 'vote_button', project: project %> <!-- Render the vote button partial -->
      </div>
      <%= button_to "delete", project, method: :delete, data: { turbo_confirm: "Are you sure to delete" }, class: "btn-primary bg-red-500 hover:bg-red-600" %>
    </div>
  </div>
<% end %>
